@model IEnumerable<TiSelvagem.Dominio.Aluno>

@{
    ViewBag.Title = "Listagem de Aluno";
}


<p>
    @Html.ActionLink("Novo Aluno", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
           <p>Idade</p> 
        </th>
        <th>
           <p>Nome do Aluno</p>  
        </th>
        <th>
            <p>Nome da Mãe</p>   
        </th>
        <th>
            <p>Data de Nascimento</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vIDALUNO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vNOME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vMAE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vDATA_NASCIMENTO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new {  id=item.vIDALUNO }) |
            @Html.ActionLink("Detalhe", "Detalhe", new { id = item.vIDALUNO }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.vIDALUNO })
        </td>
    </tr>
}

</table>
